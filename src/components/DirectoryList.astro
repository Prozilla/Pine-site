---
import { getCollection } from "astro:content";
import { CardGrid, LinkCard } from "@astrojs/starlight/components";

interface Props {
  directory: string;
  showHidden?: boolean;
}
const { directory, showHidden = false } = Astro.props;

const pages = await getCollection("docs", (entry) => entry.id.startsWith(directory + "/") && (showHidden || !entry.data.sidebar.hidden)).catch((error) => {
	console.error(error);
	return null;
});
---

{
	pages && <CardGrid>
		{pages.map(({ data, id }) => (
			<LinkCard
				title={data.title}
				href={'/' + id}
				description={data.description}
			/>
		))}
	</CardGrid>
}
